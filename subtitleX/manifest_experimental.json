{
    "name": "subtitleX",
    "version": "0.0.1",
    "manifest_version": 3,
    "description": "subtitleX",
    "action": {
        "default_popup": "index.html",
        "default_icon": "icon.png"
    },
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "wantsubtitle.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "content_scripts": [
        {
            "js": [
                "scripts/content.js"
            ],
            "matches": [
                "https://developer.chrome.com/docs/extensions/*",
                "https://developer.chrome.com/docs/webstore/*"
            ]
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "commands":{
        "_execute_action":{
            "suggested_key":{
                "default":"Ctrl+B",
                "mac":"Command+B"
            }
        }
    }
}