{
    "name": "SubtitleX",
    "version": "0.1.0",
    "icons":[

    ],
    "description":"Provide subtitle in your desired language for online videos.",
    "manifest_version": 3,
  
    "action": {
        "default_popup":"index.html",
        "default_icon": "icon.png"
    },
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "host_permissions":[
        "https://api.subtitleX.xyz/"
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "wantsubtitle.js",
                "subtitlexscript.js",
                "subtitle/*",
                "https://api.subtitlex.xyz/page/subtitle"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts":[
        {
            "matches": ["*://missav.com/*/*"],
            "js": ["content-script.js"],
            "all_frames": false,
            "match_origin_as_fallback": false,
            "match_about_blank": false,
            "run_at": "document_idle",
            "world": "ISOLATED"
        }
    ]
}